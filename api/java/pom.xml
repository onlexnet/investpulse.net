<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>onlexnet.sinnet</groupId>
  <artifactId>client-java-build</artifactId>
  <packaging>pom</packaging>
  <version>${revision}</version>

  <modules>
    <module>.parent</module>
    <module>.parent.rpc</module>
    <module>.parent.events</module>
    <module>uservice-market.rpc</module>
    <module>uservice-market.events</module>
    <module>uservice-scheduler.events</module>
    <module>uservice-signals.events</module>
  </modules>

  <properties>
    <!-- Remove warning:
      [WARNING] Using platform encoding (UTF-8 actually) to copy filtered resources, i.e. build is platform dependent!
    -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>


    </plugins>
  </build>

